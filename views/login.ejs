<body>
    <%if(locals.errorMsg != undefined){%>
        <div>
            <p> Credenciales invalidas</p>
        </div>  
    <%}%>
    <form class="loginform" action="/user/login" method="POST">           
        <div class="div">
            <label id="contraseña" class="labels-formulario">Usuario</label>
            <input type="text" name="mail" class="input inputMailLog" placeholder="bemba.contenta@example.com"> 
        </div>
        <div class="div">
            <label id="contraseña" class="labels-formulario">Contraseña</label>
            <input id="password" type="password" name="password" class="input inputPasswordCheck" placeholder="*********">
            <i id="viewPass" class="far fa-eye fa-2x"></i>
            <i id="viewPassNot" class="far fa-eye-slash fa-2x"></i>

        <label class="label-checkbox">
        <label id="label-usuario" class="labels-formulario">
            <input type="checkbox" name="remember_user"> Recordar mi usuario
        </label>
    </label>
        <button type="submit" class="btn btn-outline-success" id="ingresar">Ingresar</button>
    <div>
        <button id="restablecer" type="submit">¿Reestablecer contraseña?</button>
        <a href="/user/register" id="ancorRegistro"> ¿No estás registrado? </a> 
        
    </div>
    </form>

    <script src="/javascript/pass.js"></script>
</body>