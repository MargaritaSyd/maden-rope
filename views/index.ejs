<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/77ea5851fe.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Made in Rope</title>
</head>
<body>
    <header>
        <span class="cont-logo">
            <a href="/"> <img class="logo" src="/img/logo.jpg" alt="logo"></a> 
        </span>
        <div class="the-header">
            <form id="search">
                <input type="text"> <i class="fas fa-search"></i>
            </form>
            <div id="user-cart">
                <a href="/user/login"><i class="far fa-user fa-2x "></i></a>
                <i class="fas fa-shopping-cart fa-2x "></i>
            </div>
        </div>

        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="./img/carrousel1.jpg" class="d-block w-100 carousel">
              </div>
              <div class="carousel-item">
                <img src="./img/carrousel2.jpg" class="d-block w-100 carousel">
              </div>
              <div class="carousel-item">
                <img src="./img/carrousel3.jpg" class="d-block w-100 carousel">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          <nav id="navbar">
            <a href="#"><button type="button" class="btn btn-secondary">CONOCENOS!</button></a>
            <a href="#"><button type="button" class="btn btn-secondary">Tabla de talles</button></a>
            <a href="#"><button type="button" class="btn btn-secondary">CÃ³mo comprar</button></a>
            <a href="#"><button type="button" class="btn btn-secondary">Preguntas frecuentes</button></a>
        </nav>
   
    </header>
    <main>
        <div id="conteiner">
            <div class="category-product">
            <h2 class="category"> Bozales</h2>
            <% for(let i=0; i<productosC1.length; i++){%>
                <div class="card bg-dark text-white product productConteiner">
                    <% if(productosC1[i].image_product){%>
                        <img src="/img/productImages/<%=productosC1[i].image_product%>" > 
                    <%}else{%>
                        <img src="/img/logo.jpg" >
                    <%}%>
                    <div class="card-img-overlay">
                        <a href="/detail/<%=productosC1[i].id%>"><h5 class="card-title textcard"><%= productosC1[i].name %></h5></a>
                    </div>
                </div>
                
            <%}%>
            </div>
            <div class="category-product">
            <h2 class="category">Riendas</h2>
            <% for(let i=0; i<productosC2.length; i++){%>
                <div class="card bg-dark text-white product productConteiner">
                    <% if(productosC2[i].image_product){%>
                        <img src="/img/productImages/<%=productosC2[i].image_product%>" > 
                    <%}else{%>
                        <img src="/img/logo.jpg" >
                    <%}%>
                    <div class="card-img-overlay">
                       <a href="/detail/<%=productosC2[i].id%>"><h5 class="card-title textcard"><%= productosC2[i].name %></h5> </a>
                    </div>
                </div>
            <%}%>
            </div>
            <div class="category-product">
            <h2 class="category">Accesorios</h2>

            <% for(let i=0; i<productosC3.length; i++){%>
                <div class="card bg-dark text-white product productConteiner">
                    <% if(productosC3[i].image_product){%>
                        <img src="/img/productImages/<%=productosC3[i].image_product%>" > 
                    <%}else{%>
                        <img src="/img/logo.jpg" >
                    <%}%>
                    <div class="card-img-overlay">
                       <a href="/detail/<%=productosC3[i].id%>"> <h5 class="card-title textcard"><%= productosC3[i].name %></h5> </a>
                    </div>
                </div>
            <%}%>
            </div>
        
        </div>
      
        <footer id="foot">
                <label class="footer-titulos"></label>
                <a href="/"><i class="fab fa-whatsapp footer-items fa-4x"></i></label>
                <a href="https://www.google.com.ar/maps/place/Los+Panas+Centro+Ecuestre,+CGA,+Nicaragua+101,+B1632+Manzanares,+Provincia+de+Buenos+Aires/@-34.4565133,-59.013026,17z/data=!4m2!3m1!1s0x95bc81f343e2b7dd:0x66e179eb76bfce0b"><i class="fas fa-map-marker-alt footer-items fa-4x"></i></label>
                <a href="/"> <img class="logo" src="/img/logo.jpg" alt="logo"></a> 
                <a href="https://www.instagram.com/madeinrope/"><i class="fab fa-instagram footer-items fa-4x"></i></a>
                <label><i class="fab fa-facebook footer-items fa-4x"></i></label>
        </footer>
    </body>
</html>