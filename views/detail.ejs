<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/77ea5851fe.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Made in Rope</title>
</head>
<body>
    <header>
       
        <nav id="navbar">
            
        
            
        <a href="/user/login"><button type="button" class="btn btn-outline-secondary">Ingresar</button></a>    
        <a href="/user/cart"><button type="button" class="btn btn-outline-secondary">Shop</button></a>
        <a href="#"><button type="button" class="btn btn-outline-success">Nosotros</button></a>
        <a href="#"><button type="button" class="btn btn-outline-success">Tabla de talles</button></a>
        <a href="#"><button type="button" class="btn btn-outline-light">Cómo comprar</button></a>
        <a href="#"><button type="button" class="btn btn-outline-light">Preguntas frecuentes</button></a>
    </nav>
       
        
        <div class= "banner-index">
            <div class= "img-banner-index">
                <img src= "/img/frontEnd/banner-index.png">
            </div>
        </div>

          
   
    </header>
    
    <main>
        <h1 id="productName" > <%=product.name%> </h1>
        <div id="detail-conteiner">
            <div id="img-conteiner">
               
                <img id="detail-img" src="/img/productImages/<%=product.image_product%>" class="img-fluid" alt="..."> 
                <div class="thumb-img-content">
                    
                    <img id="thumb-img-1" class="thumb-img"  src="/img/productImages/<%=product.image_product_1%>" class="img-thumbnail" alt="...">
                    <img id="thumb-img-2" class="thumb-img"  src="/img/productImages/<%=product.image_product_2%>" class="img-thumbnail" alt="...">
                    <img id="thumb-img-3" class="thumb-img"  src="/img/productImages/<%=product.image_product_3%>" class="img-thumbnail" alt="...">
                   
                    </div>
            </div>
            <div class='detail-product' id="productDescription">
                <%=product.description%>
            </div>
            <div class='detail-product' id="productPrice">
                <%=product.price%>
            </div>
           
            <div>
                <form action="">
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Elegí el color principal</option>
                        <option value="Violeta" style="background-color: blueviolet;">Violeta</option>
                        <option value="Azul" style="background-color:#005cd4" >Azul</option>
                        <option value="Verde Agua" style="background-color:#6badb1">Verde Agua</option>
                        <option value="Verde Militar" style="background-color: #353c34" >Verde Militar</option>
                        <option value="Verde Manzana" style="background-color:#bcd042" >Verde Manzana</option>
                        <option value="Amarillo" style="background-color:#e9ad45" >Amarillo</option>
                        <option value="Marrón" style="background-color:#816443" >Marrón</option>
                        <option value="Marrón Claro" style="background-color: #d4c1b5">Marrón Claro</option>
                        <option value="Tabaco" style="background-color:#221815">Tabaco</option>
                        <option value="Gris" style="background-color: #6e8292">Gris</option>
                        <option value="Negro" style="background-color: black">Negro</option>
                        <option value="Rojo" style="background-color:#a93f34">Rojo</option>
                        <option value="Bordo" style="background-color: #6c2727">Bordo</option>
                        <option value="Salmón" style="background-color:#e08a77">Salmón</option>
                        <option value="Fucsia" style="background-color: #d65d85">Fucsia</option>
                    </select>
                </form>
            </div>
        <%if(userToLog && userToLog.admin==0){%>
            <p><a href="/edit/<%=product.id%>"> <button class="btn btn-primary" id="logout" type="submit">Editar producto</button></a> </p>
        <%} else {%>
            <p id="cart">Agregar al carrito<i class="fas fa-shopping-cart fa-2x "></i> </p>
        <%}%>   
        </div>
    </main>
    <footer>
        
    </footer>
    <script src="/javascript/cart.js"></script>
    <script src="/javascript/images.js"></script>
</body>
</html>