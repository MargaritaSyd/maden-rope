<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/77ea5851fe.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Made in Rope</title>
</head>
<body>
    <header>

        <div class= "bannersec">
            <div class= "img-banner-index">
                <img src= "/img/frontEnd/bannersec.png">
            </div>
        </div>
       
        <nav id="navbarSec">
            
        
            
        <a href='/lamorita'><button type="button" class="btn btn-outline-light">Conocenos</button></a>
        <a href='/como_comprar'><button type="button" class="btn btn-outline-light">Cómo comprar</button></a>
        <div id="clickFav"><i class="fas fa-heart fa-2x"></i></div>
        </div>
    </nav>
       
        
        

          
   
    </header>
    
    <main>
        <h1 id="productName" > <%=product.name%> </h1>
        <h2 id="modelo"> </h2>
        <div id="detail-conteiner">
            <div id="img-conteiner">
               
                <img id="detail-img" src="/img/productImages/<%=product.image_product%>" class="img-fluid" alt="..."> 
                <div class="thumb-img-content">
                    <% if(product.image_product_1 != null){%>
                    <img id="thumb-img-1" class="thumb-img"  src="/img/productImages/<%=product.image_product_1%>" class="img-thumbnail" alt="...">
                    <%}else{%>    
                    <img id="thumb-img-1" class="thumb-img"  src="/img/logo_made_in_rope.png" class="img-thumbnail" alt="...">
                    <%}%>
                    
                    <% if(product.image_product_2 != null){%>
                    <img id="thumb-img-2" class="thumb-img"  src="/img/productImages/<%=product.image_product_2%>" class="img-thumbnail" alt="...">
                    <%}else{%>    
                    <img id="thumb-img-2" class="thumb-img"  src="/img/logo_made_in_rope.png" class="img-thumbnail" alt="...">
                    <%}%>
                    
                    <% if(product.image_product_3){%>    
                    <img id="thumb-img-3" class="thumb-img"  src="/img/productImages/<%=product.image_product_3%>" class="img-thumbnail" alt="...">
                    <%}else{%>    
                    <img id="thumb-img-3" class="thumb-img"  src="/img/logo_made_in_rope.png" class="img-thumbnail" alt="...">
                    <%}%>
                        
                    </div>
                    <di>
                        <a href='/talles'><button type="button" class="btn btn-outline-light" id="tallesButton" >Tabla de talles</button></a>

                    </di>
            </div>
            <div class= "productInfo">
            <div class='detail-product' id="productDescription">
                <%=product.description%>
            </div>
            <div class='detail-product' id="productDescription">
                <%=product.description_add%>
            </div>
            <div class='detail-product' id="productPrice">
               <h2>$<%=product.price%></h2> 
            </div>
            <div class='detail-product' id="productPrice">
                <h2>No pierdas más tiempo, encargalo por whatsapp!<a href="/whatsapp"><i class="fab fa-whatsapp footer-items fa-2x"></i></a></h2> 
             </div>
            
        <%if(userToLog && userToLog.admin==0){%>
            <p><a href="/edit/<%=product.id%>"> <button class="btn btn-primary" id="logout" type="submit">Editar producto</button></a> </p>
        <%} else {%>
              
            <p id="notFav"><i class="far fa-heart fa-2x"></i></p>
            <p id="fav"><i class= "fas fa-heart fa-2x"></i></p>
        <%}%>   
        </div></div>
    </main>
<footer id="foot">
        <label class="footer-titulos"></label>
        <a href="/whatsapp"><i class="fab fa-whatsapp footer-items fa-4x"></i></label>
        <a href="https://www.google.com.ar/maps/place/Los+Panas+Centro+Ecuestre,+CGA,+Nicaragua+101,+B1632+Manzanares,+Provincia+de+Buenos+Aires/@-34.4565133,-59.013026,17z/data=!4m2!3m1!1s0x95bc81f343e2b7dd:0x66e179eb76bfce0b"><i class="fas fa-map-marker-alt footer-items fa-4x"></i></label>
        <a href="/"> <img class="logo" src="/img/frontEnd/logo-made.png" alt="logo"></a> 
        <a href="https://www.instagram.com/madeinrope/"><i class="fab fa-instagram footer-items fa-4x"></i></a>
        <label><i class="fab fa-facebook footer-items fa-4x"></i></label>
</footer>
    <script src="/javascript/cart.js"></script>
    <script src="/javascript/images.js"></script>
    <script src="/javascript/home.js"></script>
    <script src="/javascript/inCart.js"></script>
    <script src="/javascript/favs.js"></script>

    
</body>
</html>